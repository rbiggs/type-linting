{
  "name": "type-linting",
  "version": "1.0.0",
  "description": "A basic project for type linting.",
  "main": "app.js",
  "author": "rbiggs",
  "license": "MIT",
  "scripts": {
    "checkjs": "tsc",
    "format": "prettier --no-semi --single-quote --write ./src/js/*",
    "lint": "eslint --config ./.eslintrc.json src/js",
    "start": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.14.3",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  }
}
